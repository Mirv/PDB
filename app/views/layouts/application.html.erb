<!DOCTYPE html>
<html>
<head>
  <title>PDB</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <nav class="navbar transparent navbar-default">
  <div class="container-fluid">
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %> </li>
        <% if !user_signed_in? %>
          <li> <%= link_to "Sign In", new_user_session_path %> </li>
        <% else %>
          <li> <%= link_to "Grid", grid_show_path %> </li>
          <li> <%= link_to "Help", static_pages_help_path %> </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_player.try(:username) %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li> <%= link_to "MapPoints", map_points_path %> </li>
              <li> <%= link_to "Terrain", terrains_path %> </li>
              <li> <%= link_to "Entity", entities_path %> </li>
              <li> <%= link_to "Player", players_path %> </li>
              <li> <%= link_to("User", current_user)%> </li>
              <li role="separator" class="divider"></li>
              <li> <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %> </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
  <% if !notice.nil?||!alert.nil? %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  <% end %>
  <%= yield %>
</div>
</body>
</html>
